# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'TezosKit' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for TezosKit
  pod 'PocketSwift/Core'
  pod 'BigInt'
  pod 'MnemonicKit'
  pod 'TezosCrypto'
  pod 'PromiseKit'

  target 'TezosKitTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'TezosKit/TezosKitCore'
    pod 'PromiseKit'
  end

end
